@model Viewer

<h2>Delete Viewer</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Viewer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Subscriber
        </dt>
        <dd class="col-sm-10">
            @(Model.Subscriber ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Follower
        </dt>
        <dd class="col-sm-10">
            @(Model.Follower ? "Yes" : "No")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ViewerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
